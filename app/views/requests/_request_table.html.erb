 <% if @request.no_of_flat_mates%>
        <tr>
        <th scope="row">Max. number of flatmates</th>
        <td><%= @request.no_of_flat_mates %></td>
      </tr>
    <% end %>

      <% if @request.size%>
        <tr>
        <th scope="row">Min. room size</th>
        <td><%= @request.size %> sqm</td>
      </tr>
    <% end %>

    <tr>
      <th scope="row">Friends</th>
      <td>
        <% if @request.private_shares.empty? %>
          <p>You haven't asked your friends for help yet</p>
          <button type="button" class="blue-button" data-toggle="modal" data-target="#friendsModal">
            Ask friends for help
          </button>
        <% else %>
        <% private_shares = @request.private_shares %>
          <div class="grid" >
            <div class="scroll-friends-help">
              <div class="row row-grid">
                <% private_shares.each do |share| %>
                  <% if share.user.photo %>
                    <div class="profile">
                      <div class="imgBx">
                        <%= image_tag share.user.photo %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <button type="button" class="blue-button" data-toggle="modal" data-target="#friendsModal">
            Ask more friends for help
          </button>
        <% end %>
      </td>
    </tr>
    </tbody>
  </table>
</div>
