<div class="container">
  <div class="d-flex justify-content-around align-items-center">
    <h1>Your Room Search for <%= @request.city %></h1>
    <div>
      <%= link_to "Delete request",
      request_path(@request),
      method: :delete,
      data: { confirm: "Are you sure?" } %></div></h1>
    </div>
  </div>
  <div>
  <br>
  <br>
    <table class="table table-hover">

    <tbody>
      <tr>
        <th scope="row"></th>
        <td><strong>City</strong></td>
        <td><%= @request.city %></td>
      </tr>

      <tr>
        <th scope="row"></th>
        <td><strong>Budget</strong></td>
        <td><%= @request.budget %></td>
      </tr>
     <% if @request.move_in_date_earliest %>
         <tr>
        <th scope="row"></th>
        <td><strong>Earliest move-in date</strong></td>
        <td><%= @request.move_in_date_earliest %></td>
      </tr>
     <% end %>

      <% if @request.move_in_date_latest %>
         <tr>
        <th scope="row"></th>
        <td><strong>Latest move-in date </strong></td>
        <td><%= @request.move_in_date_earliest %></td>
      </tr>
     <% end %>

     <% if @request.address %>
        <tr>
        <th scope="row"></th>
        <td><strong>Address</strong></td>
        <td><%= @request.address %></td>
      </tr>
     <% end %>

      <% if @request.radius%>
        <tr>
        <th scope="row"></th>
        <td><strong>Radius</strong></td>
        <td><%= @request.radius %> km</td>
      </tr>
     <% end %>

     <% if @request.no_of_flat_mates%>
        <tr>
        <th scope="row"></th>
        <td><strong>Max. number of flatmates</strong></td>
        <td><%= @request.no_of_flat_mates %></td>
      </tr>
     <% end %>

       <% if @request.size%>
        <tr>
        <th scope="row"></th>
        <td><strong>Min. room size</strong></td>
        <td><%= @request.size %> sqm</td>
      </tr>
     <% end %>
    </tbody>
  </table>
   
    </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">
  Edit request
</button>
</div>


<div class="modal" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit request</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
            <%= simple_form_for @request do |f| %>
      <%= f.input :city %>
      <%= f.input :budget %>
          <strong><%= f.label "Move-in Date" %> </strong>
          <br>
          <%= f.label "Earliest" %>
          <%= f.input :move_in_date_earliest, as: :string, input_html: { class: "flatpickr" }, label: false %>
          <%= f.label "Latest" %>
          <%= f.input :move_in_date_latest, as: :string, input_html: { class: "flatpickr" }, label: false %>
          <%= f.input :address %>
          <%= f.input :radius %>
          <%= f.input :no_of_flat_mates %>
          <%= f.input :size %>
 
      <%= f.submit "Submit", class: "btn btn-primary" %>
  
    <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>