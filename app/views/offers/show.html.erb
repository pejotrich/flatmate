<%= simple_form_for [@request, @offer] do |f| %>
  <%= f.input :first_message %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>


<div class="container">
  <% if @offer.status == "pending"  %>
    <div>
      <h6><%= link_to "Accept",  request_offer_accept_path(@request, @offer), method: :post%> </h6>
      <br>
      <h6><%= link_to "Decline",  request_offer_decline_path(@request, @offer), method: :post%></h6>
    </div>
  <% end %>
</div>


